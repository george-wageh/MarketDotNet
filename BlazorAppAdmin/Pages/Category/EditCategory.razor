@inherits ComponentModel<CategoryDTO>
@if (Item != null)
{
    <div id="modal" class="modal @(isModalVisible ? "show d-block" : "")" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit Category</h1>
                    <button type="button" @onclick="this.HideModal" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="my-3 p-2 border-1 border rounded-1 border-secondary" style="width:fit-content; margin:auto;">
                        <EditForm Model="Item">
                            <label>New name:</label>
                            <InputText id="newName" class="form-control" @bind-Value="Item.Name" style="width:fit-content;" />
                            <div class="text-center">
                                <button @onclick="()=>SaveAsync()" class="btn btn-outline-success m-2">Save name</button>

                            </div>
                        </EditForm>
                    </div>
                    <div class="row justify-content-center">
                        <a class="btn btn-outline-primary d-block m-2" style="width:fit-content;" href="/addProduct?CategoryId=@Item.Id">Add product in @Item.Name</a>
                        <a class="btn btn-outline-primary d-block m-2" style="width:fit-content;" href="/products?CategoryId=@Item.Id">Show products @Item.Name</a>
                        <a class="btn btn-outline-success d-block m-2" style="width:fit-content;" href="/categories/add/@Item.Id">Add Category in @Item.Name</a>
                    </div>
 

                </div>
                <div class="modal-footer">
                    <button type="button" @onclick="HideModal" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    

}
