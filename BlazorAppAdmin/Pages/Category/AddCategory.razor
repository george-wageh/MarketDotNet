@page "/categories/add/{ParendId:int}"
@layout AdminLayout
@if (message != null)
{    
    <MessageAlert Message="message"/>
}
<div>
    <div class="mb-3">
        <label for="CategoryName" class="form-label">Category Name</label>
        <input type="text" id="CategoryName" class="form-control" formControlName="CategoryName" @bind="Category.Name" />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary" @onclick="SaveAsync">Add category</button>
    </div>
</div>