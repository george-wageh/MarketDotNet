@if (products == null)
{

    <div>
        Loading
    </div>
}
else
{

    <div class="row justify-content-center">
        @foreach (var product in products)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 d-flex">
                <div class="card" style="width: 100%;">
                    <span style="width: 130px; height: 130px;" class="d-inline mx-auto">
                        <img src="@product.ImageUrl" class="card-img-top" alt="..." style="width: 100%; height: 100%; object-fit: contain;">
                    </span>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <h5 class="card-text">Price: @product.Price</h5>
                        <NavLink class="btn btn-primary me-2" href=@($"/products/{product.Id}")>Details</NavLink>
                    </div>
                </div>
            </div>
        }
    </div>



}
